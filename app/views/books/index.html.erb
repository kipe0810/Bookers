<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>


<header>
	<h1>Books</h1>
</header>

<main>
	<table>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
		<% @books.each do |book| %>
		  <tr>
		      <td><%= book.title %></td>
		      <td><%= book.body %></td>
		      <td>
		      	<%=link_to "show", book_path(book.id) %>
		      	<%=link_to "edit", edit_book_path(book.id) %>
		      	<%=link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
		      </td>
		  </tr>
		<% end %>
	</table>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>

      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_area :body %><br>

      <br><%= f.submit 'Create Book' %>

    <% end %>
</main>
